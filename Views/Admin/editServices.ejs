<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="css/style.css" rel="stylesheet">
    </head>
    <body>
     <%- include ../Partials/adminheader.ejs %>

    <%for(let i = 0;i<categories.length;i++){%>
        <%=categories[i]%>
        <%for(let j = 0;j<foods.length;j++){
            if(foods[j].category===categories[i]){%>
            <div class="foodrow">
                <div class="foodimg foodcol"><img src="<%=foods[j].img%>"></div>
                <div class="foodcol">
                <%=foods[j].name%>
                <%if(foods[j].vegetarian){%>
                    <span class="veggie">VEGETARIAN!</span>
                    <%}%><br/>
                <%=foods[j].description%><br/>

                            <form action="/caterco/admin/deleteservice/<%=foods[j]._id%>?_method=DELETE" method="POST">
                            <button type="submit">Delete Service</button>
                            </form>
                            <form action="/caterco/admin/updateservice/<%=foods[j]._id%>" method="GET">
                            <button type="submit">Update Service</button>
                            </form>
                </div>
            </div>


            <%}%>
        <%}%>
        <hr>
    <%}%>



<%# ADD NEW SERVICE %>
<form action="/caterco/admin/newservice" method="GET">
<button type="submit">Make New Service</button>
</form>




<%- include ../Partials/footer.ejs %>
    </body>
</html>